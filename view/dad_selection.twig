{% extends 'shared/generic.twig' %}

{% block styles %}
	{{ parent() }}
	<link rel="stylesheet" href="./view/styles/card.css">
{% endblock %}

{% block title 'Rent-A-Dad :: Dad Selection' %}

{% block content %}
	<h2>Dad Selection</h2>

	<p>Proficiency is on a scale from 1&ndash;5 where 1 is "dabbling" and 5 is "professional."</p>

	<div class="selection">
		{% if dads is defined and dads is not empty %}
			{% for dad in dads %}
				{% include 'components/dad_card.twig' %}
			{% endfor %}
		{% endif %}
	</div>
{% endblock %}
